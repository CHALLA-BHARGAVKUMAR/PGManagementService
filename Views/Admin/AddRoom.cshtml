@using PGManagementService.Data.DTO;
@model RoomRequest

<h2>Create Room</h2>

<form asp-action="AddRoom" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="RoomNo">Room Number</label>
        <input asp-for="RoomNo" class="form-control" />
        <span asp-validation-for="RoomNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RoomType">Room Type</label>
        <select asp-for="RoomType" class="form-control">
            <option value="1">Single</option>
            <option value="2">Double</option>
            <option value="3">Suite</option>
        </select>
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@* @await Component.InvokeAsync("AdminDashboard") *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
